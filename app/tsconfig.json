{
	"compilerOptions":
	{
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "node",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"paths":
		{
			"@/*": ["./src/*"],
			"@utils/*": ["./src/utils/*"],
		}
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}